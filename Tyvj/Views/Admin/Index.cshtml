
@{
    ViewBag.Title = "Index";
}
<style>
    table {
        width:100%;
        text-align:left;
    }
</style>
<div class="tyvj-left" style="width:755px;">
    <div class="tyvj-shadow tyvj-boder-top">
        <div class="tyvj-content" style="padding-top:10px;">
            <div class="tyvj-content-inner">
                <h2 style="margin: 10px 0 0 0;">管理后台</h2>
                <div class="tyvj-status-info">
                    <p>Tyvj Online Judge 4.0 with Code Comb Core</p>
                    <p>Developed by あまみや ゆうこ</p>
                    <h3>Statistics</h3>
                    <table>
                        <thead>
                            <tr>
                                <th>类别</th>
                                <th>今日</th>
                                <th>昨日</th>
                                <th>七天内</th>
                                <th>本月</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>新增用户</td>
                                <td>@ViewBag.TUser</td>
                                <td>@ViewBag.YUser</td>
                                <td>@ViewBag.WUser</td>
                                <td>@ViewBag.MUser</td>
                            </tr>
                            <tr>
                                <td>活跃用户</td>
                                <td>@ViewBag.TActive</td>
                                <td>@ViewBag.YActive</td>
                                <td>@ViewBag.WActive</td>
                                <td>@ViewBag.MActive</td>
                            </tr>
                            <tr>
                                <td>评测量</td>
                                <td>@ViewBag.TStatus</td>
                                <td>@ViewBag.YStatus</td>
                                <td>@ViewBag.WStatus</td>
                                <td>@ViewBag.MStatus</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="tyvj-right" style="width:200px;">
    <ul class="section" id="actions">
        <li><a class="action" href="/Admin" target="_self">管理后台</a></li>
        <li><a class="action" href="/Admin/Users" target="_self">用户管理</a></li>
        <li><a class="action" href="/Admin/Rating" target="_self">Rating管理</a></li>
        <li><a class="action" href="/Admin/VIP" target="_self">会员审核</a></li>
        <li><a class="action" href="/Admin/Problem" target="_self">题目评价</a></li>
    </ul>
</div>
