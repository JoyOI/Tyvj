@{
    ViewBag.Title = "团队";
    ViewBag.BannerTitle = "团队";
}

<div class="tyvj-boder-top tyvj-shadow grid_9">
    <div class="cont-wrap">
        <table class="tyvj-list-discuss">
            <tbody>
                @foreach (vGroupJoin g in ViewBag.GroupJoin)
                {
                    <tr>
                        <td class="c1">
                            <img class="face" src="@g.User.Gravatar" />
                        </td>
                        <td class="c2">
                            <div class="title">
                                <a href="/User/@g.UserID">@g.User.Username</a>
                                <span style="font-size: 13px; color: #BBB;">@g.User.Motto</span>
                            </div>
                            <div class="footer">@g.Content</div>
                        </td>
                        <td class="c3">
                            <a href="/Group/Ratify/Accept/@g.ID">接受</a>
                            <a href="javascript:Decline()">驳回</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="tyvj-right grid_3">
    <div class="tyvj-shadow tyvj-boder-top tyvj-content">
        <h2>团队操作</h2>
        <ul>
            <li>@Html.ActionLink("团队首页", "Group", "Show", new { id = ViewBag.Model.ID }, null)</li>
            <li>@Html.ActionLink("团队成员", "Group", "Member", new { id = ViewBag.Model.ID }, null)</li>
            <li>@Html.ActionLink("团队比赛", "Group", "Contest", new { id = ViewBag.Model.ID }, null)</li>
            <li>@Html.ActionLink("加入团队", "Group", "Join", new { id = ViewBag.Model.ID }, null)</li>
            <li>@Html.ActionLink("团队设置", "Group", "Settings", new { id = ViewBag.Model.ID }, null)</li>
            <li>@Html.ActionLink("成员审核", "Group", "Ratify", new { id = ViewBag.Model.ID }, null)</li>
        </ul>
    </div>
</div>