@model Group
@{
    ViewBag.Title = "团队";
    Layout = "~/Views/Shared/_LayoutNarrow.cshtml";
}

<div class="container_12 tyvj-block">
    <div class="tyvj-shadow tyvj-content-narrow">
        <div class="tyvj-content-narrow-header">添加比赛</div>
        <div class="tyvj-content" style="margin-top:40px;">
            @using (Html.BeginForm("AddContest", "Group", new { id = Model.ID }, FormMethod.Post, null))
            {
                @Html.AntiForgeryToken()
                <p>请输入团队比赛的ID</p>
                <p>ID: @Html.TextBox("ID", "", new { @class = "textbox" }) 请输入有效的比赛ID。</p>
                <p><input type="submit" value="添加比赛" class="button button-def" /> <span style="color:red">@ViewBag.Info</span></p>
            }
        </div>
    </div>
</div>