@model Group
@{
    ViewBag.Title = Model.Title + " - 团队设置";
}
<style>
    .tyvj-status-info {
        line-height: 40px;
    }

    .select {
        width: 120px;
    }
</style>
<div class="tyvj-left" style="width:755px;">
    <div class="tyvj-shadow">
        <div class="tyvj-content-header">
            @Model.Title
        </div>
        <div class="tyvj-content" style="padding-top:10px;">
            <div class="tyvj-boder-top tyvj-content-inner">
                <h2>基本信息设置</h2>
                @using (Html.BeginForm("Settings", "Group", new { id = Model.ID }, FormMethod.Post, null))
                {
                    @Html.AntiForgeryToken()
                    <div class="tyvj-status-info">
                        <table>
                            <tbody>
                                <tr><td class="tyvj-status-info-left">团队名称</td><td>@Html.TextBox("Title", Model.Title, new { @class = "textbox" })</td></tr>
                                <tr><td class="tyvj-status-info-left">团队介绍</td><td>@Html.TextBox("Description", Model.Description, new { @class = "textbox" })</td></tr>
                                <tr>
                                    <td class="tyvj-status-info-left">审核方式</td>
                                    <td>
                                        <select class="select" id="lstFormat" name="Format">
                                            <option value="0" @(Model.JoinMethod == GroupJoinMethod.Everyone ? "selected" : "")>Everyone</option>
                                            <option value="1" @(Model.JoinMethod == GroupJoinMethod.Nobody ? "selected" : "")>Nobody</option>
                                            <option value="2" @(Model.JoinMethod == GroupJoinMethod.Ratify ? "selected" : "")>Ratify</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr><td class="tyvj-status-info-left">Gravatar</td><td class="tyvj-status-info-middle">@Html.TextBox("Gravatar", Model.Gravatar, new { @class = "textbox" })</td><td><small><a href="https://www.gravatar.com/">Gravatar</a>是一个全球通用的头像服务。</small></td></tr>
                                <tr><td class="tyvj-status-info-left"></td><td><input type="submit" value="保存" id="btnSave" class="button button-def" /></td></tr>
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="tyvj-right" style="width:200px;">
    <ul class="section" id="actions">
        <li><a class="action" href="/Group/Index">返回团队列表</a></li>
    </ul>
</div>
