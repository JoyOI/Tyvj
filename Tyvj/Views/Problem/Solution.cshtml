@model Problem
@{
    ViewBag.Title = Model.Title + " - 题解";
}
<style>
    .tyvj-status-info {
        line-height: 40px;
    }

    .select {
        width: 120px;
    }
</style>
<div class="tyvj-left" style="width:755px;">
    <div class="tyvj-shadow tyvj-boder-top">
        <table class="tyvj-list-discuss" id="lstSolutions">
            <tr class="">
                <td class="c1">
                    <img class="face" src="http://www.gravatar.com/avatar/159c4a0a78d0980aca8df9d781d1c755?s=180&d=mm">
                </td>
                <td class="c2">
                    <div class="title"><a href="/Solution/1">P1064旧版题解</a></div>
                    <div class="footer">作者：<a href="/User/1" target="_blank" class="user usergroup3">admin</a> / 标签 <a href="/bbs/Discuss.aspx?districtid=2" class="node" target="_self">题解区</a></div>
                </td>
            </tr>
        </table>
        <div>
            <a href="javascript:Load()">
                <div class="block-more enabled" id="btnMore">点击加载更多</div>
            </a>
        </div>
    </div>
</div>
<div class="tyvj-right" style="width:200px;">
    <ul class="section" id="actions">
        @if (User.Identity.IsAuthenticated)
        {
            <li><a class="highlight action" href="/Solution/Create/@Model.ID">编写题解</a></li>
        }
        <li><a class="action" href="/p/@Model.ID">返回题目</a></li>
    </ul>
</div>
<script>
    id = @Model.ID;
</script>