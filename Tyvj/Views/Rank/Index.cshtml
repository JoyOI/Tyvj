@{
    ViewBag.Title = "评级排名";
    ViewBag.BannerTitle = "评级排名";
}

<div class="tyvj-boder-top tyvj-shadow grid_9">
    <div class="cont-wrap">
        <table class="tyvj-list-discuss">
            <tbody id="lstRanks">
            </tbody>
        </table>
        <div>
            <a href="javascript:Load()">
                <div class="block-more enabled" id="btnMore">点击加载更多</div>
            </a>
        </div>
    </div>
</div>

<div class="tyvj-right grid_3">
    <div class="tyvj-shadow tyvj-boder-top tyvj-content">
        <h2>排序方式</h2>
        <ul>
            <li><a href="javascript:GetRating()">按Rating排名</a></li>
            <li><a href="javascript:GetAC()">按通过数排名</a></li>
        </ul>
    </div>
</div>

<script>
    var mode = 0;
    function GetRating()
    {
        mode = 0;
        page = 0;
        $("#lstRanks").html("");
        lock = false;
        Load();
    }
    function GetAC() {
        mode = 1;
        page = 0;
        $("#lstRanks").html("");
        lock = false;
        Load();
    }
</script>