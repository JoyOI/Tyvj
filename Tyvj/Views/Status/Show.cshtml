@model Status
@{
    ViewBag.Title = string.Format("S{0} - 查看记录");
}
<div class="tyvj-left" style="width:755px;">
    <div class="tyvj-shadow">
        <div class="tyvj-content-header">
            <strong>P@(Model.Problem.ID)</strong> @Model.Problem.Title
        </div>
        <div class="tyvj-content" style="padding-top:10px;">
            <div class="tyvj-boder-top tyvj-content-inner">
                <h2>记录信息</h2>
                <p><label>记录号</label> S@(Model.ID)</p>
                <p><label>评测状态</label> @CommonEnums.JudgeResultDisplay[Model.ResultAsInt]</p>
                <p><label>题目</label> <a href="/p/@(Model.ProblemID)">P@(Model.ProblemID) @Model.Problem.Title</a></p>
                <p><label>提交时间</label> @Model.Time.ToString("yyyy-MM-dd HH:mm:ss")</p>
                <p><label>代码语言</label> @CommonEnums.LanguageDisplay[Model.LanguageAsInt]</p>
                <p><label>消耗内存</label> @Model.JudgeTasks.Max(x=>x.MemoryUsage) KiB</p>
                <p><label>消耗时间</label> @Model.JudgeTasks.Sum(x => x.TimeUsage) ms</p>
            </div>
            <div class="tyvj-boder-top tyvj-content-inner">
                <h2>评测结果</h2>
                <div id="lstJudgeResult"></div>
            </div>
            <div class="tyvj-boder-top tyvj-content-inner">
                <h2>代码</h2>
                <pre>@Model.Code</pre>
            </div>
        </div>
    </div>
</div>
<div class="tyvj-right" style="width:200px;">
    <div class="tyvj-border-top-gray tyvj-side-content tyvj-block" style="text-align:center">
        <h3>@Model.User.Username</h3>
        <p>@Html.Gravatar(Model.User.Gravatar, 80)</p>
        <p>@Model.User.Role.ToString()</p>
    </div>

    <ul class="section" id="actions">
        <li><a class="action" href="/p/@Model.ID/solution">查看题解</a></li>
        <li><a class="action" href="/p/@Model.ID/statuses" target="_self">查看本题提交记录</a></li>
    </ul>
</div>
