@model vLogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutNarrow.cshtml";
}
<div class="container_12 tyvj-block">
    <div class="tyvj-shadow tyvj-content-narrow tyvj-width-300">
        <div class="tyvj-content-narrow-header">登录您的Tyvj帐号</div>
        <div class="tyvj-content" style="width:200px;margin:0 auto;margin-top:20px;">
            @using (Html.BeginForm("Login", "User", null, FormMethod.Post, null))
            {
                @Html.AntiForgeryToken()
                <p>@Html.TextBoxFor(x => x.Username, new { @class="textbox", placeholder="用户名/Email地址", style="width:190px"})</p>
                <p>@Html.PasswordFor(x => x.Password, new { @class = "textbox", placeholder = "密码", style = "width:190px" })</p>
                <p>@Html.CheckBoxFor(x => x.Remember, new { @class="checkbox"})记住我</p>
                <p><input type="submit" value="登录" class="button button-def" /> <span>@ViewBag.Info</span></p>
            }
        </div>
    </div>
</div>