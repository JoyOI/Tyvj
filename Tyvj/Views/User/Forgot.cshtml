@{
    ViewBag.Title = "找回密码";
    Layout = "~/Views/Shared/_LayoutNarrow.cshtml";
}

<div class="container_12 tyvj-block">
    <div class="tyvj-shadow tyvj-content-narrow">
        <div class="tyvj-content-narrow-header">注册验证</div>
        <div class="tyvj-content" style="margin-top:40px;">
            @using (Html.BeginForm("Forgot", "User", null, FormMethod.Post, null))
            {
                @Html.AntiForgeryToken()
                <p>请填写您用于注册的Email地址。</p>
                <p>Email: @Html.TextBox("Email", "", new { @class = "textbox" }) 请输入有效的邮箱，系统会发送验证邮件</p>
                <p><input type="submit" value="发送验证邮件" class="button button-def" /></p>
            }
        </div>
    </div>
</div>