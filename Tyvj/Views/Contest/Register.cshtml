@model Tyvj.DataModels.Contest
@{
    ViewBag.Title = Model.Title + " - 加入私有赛";
    Layout = "~/Views/Shared/_LayoutNarrow.cshtml";
}

<div class="container_12 tyvj-block">
    <div class="tyvj-shadow tyvj-content-narrow">
        <div class="tyvj-content-narrow-header">私有赛验证</div>
        <div class="tyvj-content" style="margin-top:40px;">
            @using (Html.BeginForm("Register", "Contest", null, FormMethod.Post, null))
            {
                @Html.AntiForgeryToken()
                <p>本场比赛为私有赛，请输入正确的密码加入@(Model.Title)。</p>
                <p>参赛密码: @Html.Password("Password", "", new { @class = "textbox" }) 请输入正确的参赛密码</p>
                <p><input type="submit" value="加入比赛" class="button button-def" /> <span style="color:red">@ViewBag.Info</span></p>
            }
        </div>
    </div>
</div>